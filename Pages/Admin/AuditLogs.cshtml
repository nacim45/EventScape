@page
@model soft20181_starter.Pages.Admin.AuditLogsModel
@{
    ViewData["Title"] = "Audit Logs";
}

<style>
    .audit-logs-container {
        padding: 40px 0;
        min-height: 80vh;
        background: #f9f9f9;
        margin-bottom: 100px; /* Add more space from footer */
    }

    .audit-logs-card {
        background: white;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border: 1px solid #e9ecef;
        margin: 20px 0;
        width: 95%;
        max-width: 1600px;
        margin-left: auto;
        margin-right: auto;
    }

    .audit-logs-header {
        background: #522B5B;
        color: white;
        padding: 30px;
        border-radius: 10px 10px 0 0;
        text-align: center;
        position: relative;
    }

    .audit-logs-header h1 {
        font-size: 2.5rem;
        font-weight: 700;
        margin: 0;
        color: white;
    }

    .audit-logs-header .subtitle {
        font-size: 1.1rem;
        opacity: 0.9;
        margin-top: 10px;
        color: white;
    }

    .audit-logs-body {
        padding: 40px;
    }

    .filter-section {
        background: #f8f9fa;
        border-radius: 10px;
        padding: 30px;
        margin-bottom: 40px;
        border: 1px solid #e9ecef;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
    }

    .filter-section h3 {
        color: #522B5B;
        font-size: 1.3rem;
        font-weight: 600;
        margin-bottom: 25px;
        text-align: center;
        border-bottom: 2px solid #522B5B;
        padding-bottom: 15px;
    }

    .filter-row {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        margin-bottom: 25px;
    }

    .filter-group {
        display: flex;
        flex-direction: column;
    }

    .filter-group label {
        font-weight: 600;
        color: #522B5B;
        margin-bottom: 8px;
        font-size: 0.95rem;
    }

    .filter-group select,
    .filter-group input {
        border: 2px solid #e9ecef;
        border-radius: 4px;
        padding: 8px 15px;
        font-size: 0.95rem;
        transition: all 0.3s ease;
        background: white;
    }

    .filter-group select:focus,
    .filter-group input:focus {
        border-color: #522B5B;
        box-shadow: 0 0 0 3px rgba(82, 43, 91, 0.1);
        outline: none;
    }

    .filter-actions {
        display: flex;
        justify-content: center;
        gap: 15px;
        margin-top: 20px;
    }

    /* Apply exact same styling as register button from Index.cshtml */
    .btn-filter {
        display: inline-block;
        padding: 8px 15px;
        border-radius: 4px;
        text-decoration: none;
        font-weight: bold;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        text-align: center;
        transform: translateY(0);
        background-color: #522B5B;
        color: white;
        border: none;
        font-size: 0.95rem;
    }

    .btn-filter:hover {
        background-color: #854F6C;
        color: white;
        transform: translateY(-3px);
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.25);
        text-decoration: none;
    }

    .btn-clear {
        display: inline-block;
        padding: 8px 15px;
        border-radius: 4px;
        text-decoration: none;
        font-weight: bold;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        text-align: center;
        transform: translateY(0);
        background-color: #BFACB5;
        color: #522B5B;
        border: 1px solid #522B5B;
        font-size: 0.95rem;
    }

    .btn-clear:hover {
        background-color: #522B5B;
        color: white;
        transform: translateY(-3px);
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.25);
        text-decoration: none;
    }

    .table-section {
        background: white;
        border-radius: 10px;
        padding: 30px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        border: 1px solid #e9ecef;
    }

    .table-section h3 {
        color: #522B5B;
        font-size: 1.3rem;
        font-weight: 600;
        margin-bottom: 25px;
        text-align: center;
        border-bottom: 2px solid #522B5B;
        padding-bottom: 15px;
    }

    .audit-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .audit-table thead {
        background: #522B5B;
        color: white;
    }

    .audit-table th {
        padding: 20px 15px;
        font-weight: 600;
        font-size: 0.95rem;
        text-align: left;
        border: none;
    }

    .audit-table tbody tr {
        transition: all 0.3s ease;
        border-bottom: 1px solid #f1f3f4;
    }

    .audit-table tbody tr:hover {
        background: #f8f9fa;
        transform: scale(1.01);
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .audit-table td {
        padding: 20px 15px;
        vertical-align: middle;
        border: none;
    }

    .entity-badge {
        background: #522B5B;
        color: white;
        padding: 8px 15px;
        border-radius: 4px;
        font-size: 0.85rem;
        font-weight: 600;
        display: inline-block;
        margin-bottom: 5px;
    }

    .action-badge {
        padding: 8px 15px;
        border-radius: 4px;
        font-size: 0.85rem;
        font-weight: 600;
        display: inline-block;
    }

    .action-create {
        background: #28a745;
        color: white;
    }

    .action-update {
        background: #ffc107;
        color: white;
    }

    .action-delete {
        background: #dc3545;
        color: white;
    }

    .user-info {
        display: flex;
        flex-direction: column;
        gap: 5px;
    }

    .user-name {
        font-weight: 600;
        color: #522B5B;
    }

    .user-role {
        font-size: 0.85rem;
        color: #6c757d;
        background: #f8f9fa;
        padding: 4px 8px;
        border-radius: 4px;
        display: inline-block;
    }

    .changes-text {
        max-width: 250px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
        color: #522B5B;
    }

    /* Apply exact same styling as register button from Index.cshtml */
    .btn-view {
        display: inline-block;
        padding: 8px 15px;
        border-radius: 4px;
        text-decoration: none;
        font-weight: bold;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        text-align: center;
        transform: translateY(0);
        background-color: #BFACB5;
        color: #522B5B;
        border: 1px solid #522B5B;
        font-size: 0.85rem;
    }

    .btn-view:hover {
        background-color: #522B5B;
        color: white;
        transform: translateY(-3px);
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.25);
        text-decoration: none;
    }

    .pagination-section {
        display: flex;
        justify-content: center;
        margin: 40px 0;
    }

    .pagination {
        display: flex;
        gap: 10px;
        align-items: center;
    }

    .page-link {
        display: inline-block;
        padding: 8px 15px;
        border-radius: 4px;
        text-decoration: none;
        font-weight: bold;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        text-align: center;
        transform: translateY(0);
        background-color: #522B5B;
        color: white;
        border: none;
        font-size: 0.95rem;
    }

    .page-link:hover {
        background-color: #854F6C;
        color: white;
        transform: translateY(-3px);
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.25);
        text-decoration: none;
    }

    .page-item.active .page-link {
        background-color: #854F6C;
        box-shadow: 0 5px 15px rgba(133, 79, 108, 0.4);
    }

    .summary-section {
        background: #f8f9fa;
        border-radius: 10px;
        padding: 25px;
        margin-top: 30px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        border: 1px solid #e9ecef;
    }

    .summary-text {
        color: #522B5B;
        font-size: 0.95rem;
        margin: 0;
    }

    /* Apply exact same styling as register button from Index.cshtml */
    .btn-export {
        display: inline-block;
        padding: 8px 15px;
        border-radius: 4px;
        text-decoration: none;
        font-weight: bold;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        text-align: center;
        transform: translateY(0);
        background-color: #BFACB5;
        color: #522B5B;
        border: 1px solid #522B5B;
        font-size: 0.95rem;
    }

    .btn-export:hover {
        background-color: #522B5B;
        color: white;
        transform: translateY(-3px);
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.25);
        text-decoration: none;
    }

    .empty-state {
        text-align: center;
        padding: 60px 20px;
        color: #6c757d;
    }

    .empty-state i {
        font-size: 4rem;
        margin-bottom: 20px;
        opacity: 0.5;
        color: #522B5B;
    }

    .empty-state h4 {
        font-size: 1.5rem;
        margin-bottom: 10px;
        color: #522B5B;
    }

    .empty-state p {
        font-size: 1.1rem;
        opacity: 0.8;
        color: #522B5B;
    }

    @@media (max-width: 768px) {
        .audit-logs-body {
            padding: 20px;
        }
        
        .filter-row {
            grid-template-columns: 1fr;
        }
        
        .summary-section {
            flex-direction: column;
            gap: 15px;
            text-align: center;
        }
        
        .audit-table {
            font-size: 0.9rem;
        }
        
        .audit-table th,
        .audit-table td {
            padding: 15px 10px;
        }
    }
</style>

<div class="audit-logs-container">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-12 col-xl-11">
                <div class="audit-logs-card">
                    <!-- Header Section -->
                    <div class="audit-logs-header">
                        <h1><i class="fas fa-history"></i> Audit Logs</h1>
                        <div class="subtitle">Track and monitor all system activities and data changes</div>
                    </div>

                    <!-- Body Section -->
                    <div class="audit-logs-body">
                        <!-- Filter Section -->
                        <div class="filter-section">
                            <h3><i class="fas fa-filter"></i> Filter Audit Logs</h3>
                            <form method="get">
                                <div class="filter-row">
                                    <div class="filter-group">
                                        <label asp-for="EntityName">Entity Type</label>
                                        <select asp-for="EntityName" class="form-control">
                                            <option value="">All Entities</option>
                                            <option value="TheEvent">Events</option>
                                            <option value="AppUser">Users</option>
                                            <option value="Contact">Contacts</option>
                                            <option value="Feedback">Feedback</option>
                                        </select>
                                    </div>
                                    <div class="filter-group">
                                        <label asp-for="Action">Action</label>
                                        <select asp-for="Action" class="form-control">
                                            <option value="">All Actions</option>
                                            <option value="Create">Create</option>
                                            <option value="Update">Update</option>
                                            <option value="Delete">Delete</option>
                                        </select>
                                    </div>
                                    <div class="filter-group">
                                        <label asp-for="UserId">User ID</label>
                                        <input asp-for="UserId" class="form-control" placeholder="Enter User ID" />
                                    </div>
                                    <div class="filter-group">
                                        <label asp-for="FromDate">From Date</label>
                                        <input asp-for="FromDate" type="date" class="form-control" />
                                    </div>
                                    <div class="filter-group">
                                        <label asp-for="ToDate">To Date</label>
                                        <input asp-for="ToDate" type="date" class="form-control" />
                                    </div>
                                </div>
                                <div class="filter-actions">
                                    <button type="submit" class="btn btn-filter">
                                        <i class="fas fa-search"></i> Apply Filters
                                    </button>
                                    <a asp-page="./AuditLogs" class="btn btn-clear">
                                        <i class="fas fa-times"></i> Clear Filters
                                    </a>
                                </div>
                            </form>
                        </div>

                        <!-- Table Section -->
                        <div class="table-section">
                            <h3><i class="fas fa-table"></i> Audit Log Entries</h3>
                            
                            @if (Model.AuditLogs?.Any() == true)
                            {
                                <div class="table-responsive">
                                    <table class="audit-table">
                                        <thead>
                                            <tr>
                                                <th>Timestamp</th>
                                                <th>Entity</th>
                                                <th>Action</th>
                                                <th>User</th>
                                                <th>Changes</th>
                                                <th>IP Address</th>
                                                <th>Details</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var log in Model.AuditLogs)
                                            {
                                                <tr>
                                                    <td>
                                                        <div class="text-muted">
                                                            <strong>@log.GetFormattedTimestamp()</strong>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <div class="entity-badge">@log.EntityName</div>
                                                        <div class="text-muted">ID: @log.EntityId</div>
                                                    </td>
                                                    <td>
                                                        @{
                                                            var actionClass = log.Action switch
                                                            {
                                                                "Create" => "action-create",
                                                                "Update" => "action-update",
                                                                "Delete" => "action-delete",
                                                                _ => "action-badge"
                                                            };
                                                        }
                                                        <span class="@actionClass">@log.Action</span>
                                                    </td>
                                                    <td>
                                                        <div class="user-info">
                                                            <div class="user-name">@log.UserName</div>
                                                            <div class="user-role">@log.UserRole</div>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        @if (!string.IsNullOrEmpty(log.Changes))
                                                        {
                                                            <div class="changes-text" title="@log.Changes">
                                                                @log.Changes
                                                            </div>
                                                        }
                                                        else
                                                        {
                                                            <span class="text-muted">No changes recorded</span>
                                                        }
                                                    </td>
                                                    <td>
                                                        <div class="text-muted">@log.IpAddress</div>
                                                    </td>
                                                    <td>
                                                        <button type="button" class="btn btn-view" 
                                                                data-toggle="modal" data-target="#auditDetailModal" 
                                                                data-log-id="@log.Id">
                                                            <i class="fas fa-eye"></i> View
                                                        </button>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>

                                <!-- Pagination -->
                                @if (Model.TotalPages > 1)
                                {
                                    <div class="pagination-section">
                                        <nav aria-label="Audit logs pagination">
                                            <ul class="pagination">
                                                @if (Model.CurrentPage > 1)
                                                {
                                                    <li class="page-item">
                                                        <a class="page-link" asp-page="./AuditLogs" asp-route-page="@(Model.CurrentPage - 1)" 
                                                           asp-route-entityName="@Model.EntityName" asp-route-action="@Model.Action" 
                                                           asp-route-userId="@Model.UserId" asp-route-fromDate="@Model.FromDate?.ToString("yyyy-MM-dd")" 
                                                           asp-route-toDate="@Model.ToDate?.ToString("yyyy-MM-dd")">
                                                            <i class="fas fa-chevron-left"></i> Previous
                                                        </a>
                                                    </li>
                                                }

                                                @for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                                                {
                                                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                                        <a class="page-link" asp-page="./AuditLogs" asp-route-page="@i" 
                                                           asp-route-entityName="@Model.EntityName" asp-route-action="@Model.Action" 
                                                           asp-route-userId="@Model.UserId" asp-route-fromDate="@Model.FromDate?.ToString("yyyy-MM-dd")" 
                                                           asp-route-toDate="@Model.ToDate?.ToString("yyyy-MM-dd")">
                                                            @i
                                                        </a>
                                                    </li>
                                                }

                                                @if (Model.CurrentPage < Model.TotalPages)
                                                {
                                                    <li class="page-item">
                                                        <a class="page-link" asp-page="./AuditLogs" asp-route-page="@(Model.CurrentPage + 1)" 
                                                           asp-route-entityName="@Model.EntityName" asp-route-action="@Model.Action" 
                                                           asp-route-userId="@Model.UserId" asp-route-fromDate="@Model.FromDate?.ToString("yyyy-MM-dd")" 
                                                           asp-route-toDate="@Model.ToDate?.ToString("yyyy-MM-dd")">
                                                            Next <i class="fas fa-chevron-right"></i>
                                                        </a>
                                                    </li>
                                                }
                                            </ul>
                                        </nav>
                                    </div>
                                }

                                <!-- Summary Section -->
                                <div class="summary-section">
                                    <p class="summary-text">
                                        <i class="fas fa-info-circle"></i>
                                        Showing @((Model.CurrentPage - 1) * Model.PageSize + 1) to @Math.Min(Model.CurrentPage * Model.PageSize, Model.TotalCount) 
                                        of @Model.TotalCount audit logs
                                    </p>
                                    <a href="@Url.Page("./AuditLogs", new { export = "csv" })" class="btn btn-export">
                                        <i class="fas fa-download"></i> Export to CSV
                                    </a>
                                </div>
                            }
                            else
                            {
                                <div class="empty-state">
                                    <i class="fas fa-search"></i>
                                    <h4>No Audit Logs Found</h4>
                                    <p>No audit logs match your current filter criteria. Try adjusting your filters or create some test data to see audit logs in action.</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Audit Detail Modal -->
<div class="modal fade" id="auditDetailModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-eye"></i> Audit Log Details
                </h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body" id="auditDetailContent">
                <!-- Content will be loaded here -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Handle audit detail modal
            $('#auditDetailModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);
                var logId = button.data('log-id');
                var modal = $(this);
                
                // Show loading state
                modal.find('#auditDetailContent').html('<div class="text-center"><i class="fas fa-spinner fa-spin fa-2x"></i><p>Loading...</p></div>');
                
                // Load audit log details via AJAX
                $.get('/Admin/AuditLogs/Details/' + logId, function(data) {
                    modal.find('#auditDetailContent').html(data);
                }).fail(function() {
                    modal.find('#auditDetailContent').html('<div class="alert alert-danger">Failed to load audit log details.</div>');
                });
            });
        });
    </script>
}
