@page
@model DeleteSearchResultsModel
@{
    ViewData["Title"] = "Delete Event Results - EventScape";
    Layout = "_Layout";
}

<div class="container my-5">
    <div class="featured-events-header">
        <h2 class="featured-title">Delete Events Results</h2>
    </div>
    
    <div class="admin-navigation-container">
        <a href="/Admin" class="admin-nav-btn">
            <i class="fas fa-tachometer-alt"></i> Dashboard
        </a>
        <a href="/Admin/Events" class="admin-nav-btn">
            <i class="fas fa-calendar-alt"></i> All Events
        </a>
    </div>

<div class="main-container">
    <div class="breadcrumb-nav">
        <a href="/Admin/Dashboard" class="breadcrumb-link">Dashboard</a>
        <span class="breadcrumb-separator">/</span>
        <a href="/Admin/Events" class="breadcrumb-link">All Events</a>
        <span class="breadcrumb-separator">/</span>
        <a asp-page="SearchForDelete" class="breadcrumb-link">Search</a>
        <span class="breadcrumb-separator">/</span>
        <span class="breadcrumb-current">Delete Results</span>
    </div>

    <div class="search-header">
        <h1>Delete Event Results</h1>
        <p>Select an event from the results below to delete it.</p>
    </div>

    @if (!Model.HasSearchResults)
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i>
            <span>No events found matching your search criteria. Please try a different search.</span>
        </div>
        <div class="back-button-container">
            <a asp-page="SearchForDelete" class="admin-action-btn admin-cancel-btn">
                <i class="fas fa-arrow-left"></i> Back to Search
            </a>
        </div>
    }
    else
    {
        <div class="events-list-container">
            @foreach (var eventItem in Model.Events)
            {
                <div class="event-card">
                    <div class="event-image">
                        @if (eventItem.images != null && eventItem.images.Any())
                        {
                            <div class="event-thumbnail-container">
                                <img src="/@eventItem.images.First()" alt="@eventItem.title" class="event-thumbnail">
                            </div>
                        }
                        else
                        {
                            <div class="event-placeholder">
                                <i class="fas fa-image"></i>
                                <span>No Image</span>
                            </div>
                        }
                    </div>
                    <div class="event-details">
                        <h3 class="event-title">@eventItem.title</h3>
                        <div class="event-info">
                            <p><i class="fas fa-map-marker-alt"></i> @(char.ToUpper(eventItem.location[0]) + eventItem.location.Substring(1))</p>
                            <p><i class="fas fa-calendar-day"></i> @eventItem.date</p>
                            <p><i class="fas fa-clock"></i> @(eventItem.StartTime ?? "Not specified") - @(eventItem.EndTime ?? "Not specified")</p>
                            <p><i class="fas fa-pound-sign"></i> @eventItem.price</p>
                            <p><i class="fas fa-tag"></i> @(eventItem.Category ?? "Other")</p>
                            <p><i class="fas fa-users"></i> Capacity: @(eventItem.Capacity.HasValue ? eventItem.Capacity.Value.ToString() : "Unlimited")</p>
                            @if (!string.IsNullOrEmpty(eventItem.Tags))
                            {
                                <p><i class="fas fa-tags"></i> @eventItem.Tags</p>
                            }
                            <p>
                                <i class="fas fa-info-circle"></i> Status: 
                                <span class="badge @(eventItem.IsDeleted ? "badge-danger" : eventItem.Status == "Active" ? "badge-success" : eventItem.Status == "Cancelled" ? "badge-danger" : "badge-warning")">
                                    @(eventItem.IsDeleted ? "Deleted" : eventItem.Status)
                                </span>
                            </p>
                            @if (eventItem.IsDeleted)
                            {
                                <div class="alert alert-danger mt-2">
                                    <i class="fas fa-exclamation-circle"></i>
                                    This event has been deleted and is no longer visible to users.
                                </div>
                            }
                        </div>
                        <div class="event-description">
                            <p>@(eventItem.description.Length > 150 ? eventItem.description.Substring(0, 150) + "..." : eventItem.description)</p>
                        </div>
                    </div>
                    <div class="event-actions">
                        <button onclick="confirmDelete(@eventItem.id)" class="admin-action-btn admin-delete-btn">
                            <i class="fas fa-trash"></i> Delete Event
                        </button>
                        
                        <!-- Delete Confirmation Modal -->
                        <div class="modal fade delete-modal" id="deleteModal@(eventItem.id)" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel@(eventItem.id)" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered" role="document">
                                <div class="modal-content">
                                    <div class="modal-header bg-danger text-white">
                                        <h5 class="modal-title" id="deleteModalLabel@(eventItem.id)">
                                            <i class="fas fa-exclamation-triangle"></i>
                                            Delete Event
                                        </h5>
                                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="event-summary">
                                            <div class="event-info-grid">
                                                <div class="event-info-item">
                                                    <i class="fas fa-heading"></i>
                                                    <span>@eventItem.title</span>
                                                </div>
                                                <div class="event-info-item">
                                                    <i class="fas fa-calendar"></i>
                                                    <span>@eventItem.date</span>
                                                </div>
                                                <div class="event-info-item">
                                                    <i class="fas fa-map-marker-alt"></i>
                                                    <span>@(char.ToUpper(eventItem.location[0]) + eventItem.location.Substring(1))</span>
                                                </div>
                                                <div class="event-info-item">
                                                    <i class="fas fa-info-circle"></i>
                                                    <span>@eventItem.Status</span>
                                                </div>
                                            </div>

                                            <div class="confirmation-message">
                                                <p class="mb-3">Are you sure you want to delete this event?</p>
                                                
                                                @if (eventItem.Attendances?.Any() == true)
                                                {
                                                    <div class="alert alert-warning">
                                                        <i class="fas fa-users"></i>
                                                        <div class="alert-content">
                                                            <strong>Note:</strong>
                                                            <p>This event has registered attendees. It will be hidden but preserved in the database.</p>
                                                        </div>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <div class="alert alert-danger">
                                                        <i class="fas fa-exclamation-triangle"></i>
                                                        <div class="alert-content">
                                                            <strong>Warning:</strong>
                                                            <p>This event will be permanently deleted from the database.</p>
                                                        </div>
                                                    </div>
                                                }
                                                
                                                <div class="text-danger mt-3">
                                                    <i class="fas fa-exclamation-circle"></i>
                                                    This action cannot be undone
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="admin-action-btn admin-cancel-btn" data-bs-dismiss="modal">
                                            <i class="fas fa-times"></i> Cancel
                                        </button>
                                        <form method="post" asp-page="/Admin/Events/Delete" asp-route-id="@eventItem.id" class="d-inline">
                                            <button type="submit" class="admin-action-btn admin-delete-btn">
                                                <i class="fas fa-trash"></i> Delete Event
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="back-button-container">
            <a asp-page="SearchForDelete" class="admin-action-btn admin-cancel-btn">
                <i class="fas fa-arrow-left"></i> Back to Search
            </a>
        </div>
    }
</div>

