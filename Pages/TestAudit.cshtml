@page
@model soft20181_starter.Pages.TestAuditModel
@{
    ViewData["Title"] = "Test Audit Logging";
}

<div class="container mt-5">
    <h1>Test Audit Logging System</h1>
    
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Test Contact Creation</h5>
                </div>
                <div class="card-body">
                    <form method="post" asp-page-handler="CreateContact">
                        <div class="form-group">
                            <label>Name:</label>
                            <input type="text" name="name" class="form-control" value="Test User" required />
                        </div>
                        <div class="form-group">
                            <label>Surname:</label>
                            <input type="text" name="surname" class="form-control" value="Test Surname" required />
                        </div>
                        <div class="form-group">
                            <label>Email:</label>
                            <input type="email" name="email" class="form-control" value="test@example.com" required />
                        </div>
                        <div class="form-group">
                            <label>Phone:</label>
                            <input type="text" name="phone" class="form-control" value="123456789" required />
                        </div>
                        <div class="form-group">
                            <label>Message:</label>
                            <textarea name="message" class="form-control" required>Test message for audit logging</textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Create Test Contact</button>
                    </form>
                </div>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Test Feedback Creation</h5>
                </div>
                <div class="card-body">
                    <form method="post" asp-page-handler="CreateFeedback">
                        <div class="form-group">
                            <label>Feedback Message:</label>
                            <textarea name="message" class="form-control" required>Test feedback for audit logging</textarea>
                        </div>
                        <button type="submit" class="btn btn-success">Create Test Feedback</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5>Recent Audit Logs</h5>
                </div>
                <div class="card-body">
                    @if (Model.RecentLogs?.Any() == true)
                    {
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Timestamp</th>
                                    <th>Entity</th>
                                    <th>Action</th>
                                    <th>Entity ID</th>
                                    <th>User</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var log in Model.RecentLogs)
                                {
                                    <tr>
                                        <td>@log.GetFormattedTimestamp()</td>
                                        <td>@log.EntityName</td>
                                        <td>@log.Action</td>
                                        <td>@log.EntityId</td>
                                        <td>@log.UserName</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-muted">No audit logs found. Create some test data above to see audit logs.</p>
                    }
                </div>
            </div>
        </div>
    </div>
    
    @if (!string.IsNullOrEmpty(Model.StatusMessage))
    {
        <div class="alert alert-info mt-3">
            @Model.StatusMessage
        </div>
    }
</div>
