@page
@model soft20181_starter.Pages.EditEventModel
@{
    ViewData["Title"] = "Edit Event";
}

<h2>Edit Event</h2>

<form method="post">
    <div class="mb-3">
        <input type="hidden" asp-for="theEvent.id" />
    </div>

    <div class="mb-3">
        <label asp-for="theEvent.title">Title</label>
        <input type="text" asp-for="theEvent.title" class="form-control" />
        <span asp-validation-for="theEvent.title" class="text-danger small"></span>
    </div>

    <div class="mb-3">
        <label asp-for="theEvent.description">Description</label>
        <textarea asp-for="theEvent.description" class="form-control" rows="3"></textarea>
        <span asp-validation-for="theEvent.description" class="text-danger small"></span>
    </div>

    <div class="mb-3">
        <label asp-for="theEvent.location">Location</label>
        <input type="text" asp-for="theEvent.location" class="form-control" />
        <span asp-validation-for="theEvent.location" class="text-danger small"></span>
    </div>

    <div class="mb-3">
        <label asp-for="theEvent.date">Date</label>
        <input type="date" asp-for="theEvent.date" class="form-control" />
        <span asp-validation-for="theEvent.date" class="text-danger small"></span>
    </div>

    <div class="mb-3">
        <label asp-for="theEvent.price">Price</label>
        <input type="text" asp-for="theEvent.price" class="form-control" />
        <span asp-validation-for="theEvent.price" class="text-danger small"></span>
    </div>

    <div class="mb-3">
        <label asp-for="theEvent.link">Link</label>
        <input type="url" asp-for="theEvent.link" class="form-control" />
        <span asp-validation-for="theEvent.link" class="text-danger small"></span>
    </div>

    <div class="mb-3">
        <input type="submit" value="Update" class="btn btn-primary" />
        <a asp-page="Events" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}